{
  "swagger": "2.0",
  "info": {
    "title": "Urgency Service API",
    "version": "1.0.0",
    "description": "Mountain Service Urgency Management API"
  },
  "host": "localhost:8083",
  "basePath": "/api/v1",
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "definitions": {
    "UrgencyLevel": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"]
    },
    "UrgencyStatus": {
      "type": "string",
      "enum": ["open", "in_progress", "resolved", "closed"]
    },
    "UrgencyCreateRequest": {
      "type": "object",
      "required": ["firstName", "lastName", "contactPhone", "location", "description"],
      "properties": {
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "contactPhone": {
          "type": "string"
        },
        "location": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "level": {
          "$ref": "#/definitions/UrgencyLevel"
        }
      }
    },
    "UrgencyUpdateRequest": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "contactPhone": {
          "type": "string"
        },
        "location": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "level": {
          "$ref": "#/definitions/UrgencyLevel"
        },
        "status": {
          "$ref": "#/definitions/UrgencyStatus"
        }
      }
    },
    "UrgencyResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "contactPhone": {
          "type": "string"
        },
        "location": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "level": {
          "$ref": "#/definitions/UrgencyLevel"
        },
        "status": {
          "$ref": "#/definitions/UrgencyStatus"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "assignedEmployeeId": {
          "type": "integer",
          "format": "int64"
        },
        "assignedAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "UrgencyList": {
      "type": "object",
      "properties": {
        "urgencies": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/UrgencyResponse"
          }
        }
      }
    },
    "EmergencyAssignmentResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "urgencyId": {
          "type": "integer",
          "format": "int64"
        },
        "employeeId": {
          "type": "integer",
          "format": "int64"
        },
        "status": {
          "type": "string"
        },
        "assignedAt": {
          "type": "string",
          "format": "date-time"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "AssignmentAcceptRequest": {
      "type": "object",
      "required": ["assignmentId"],
      "properties": {
        "assignmentId": {
          "type": "integer",
          "format": "int64"
        }
      }
    },
    "AssignmentDeclineRequest": {
      "type": "object",
      "required": ["assignmentId"],
      "properties": {
        "assignmentId": {
          "type": "integer",
          "format": "int64"
        },
        "reason": {
          "type": "string"
        }
      }
    },
    "EmployeeAssignmentsResponse": {
      "type": "object",
      "properties": {
        "assignments": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/EmergencyAssignmentResponse"
          }
        }
      }
    },
    "NotificationResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "urgencyId": {
          "type": "integer",
          "format": "int64"
        },
        "employeeId": {
          "type": "integer",
          "format": "int64"
        },
        "notificationType": {
          "type": "string"
        },
        "recipient": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "attempts": {
          "type": "integer"
        },
        "lastAttemptAt": {
          "type": "string",
          "format": "date-time"
        },
        "sentAt": {
          "type": "string",
          "format": "date-time"
        },
        "errorMessage": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
