{
  "swagger": "2.0",
  "info": {
    "title": "Activity Service API",
    "version": "1.0.0",
    "description": "Mountain Activity Logging API"
  },
  "host": "localhost:8084",
  "basePath": "/api/v1",
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "definitions": {
    "ErrorResponse": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string"
        }
      }
    },
    "MessageResponse": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        }
      }
    },
    "ActivityResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "level": {
          "type": "string",
          "enum": ["info", "warning", "error", "critical"]
        },
        "description": {
          "type": "string"
        },
        "employee_id": {
          "type": "integer",
          "format": "int64"
        },
        "urgency_id": {
          "type": "integer",
          "format": "int64"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "ActivityCreateRequest": {
      "type": "object",
      "required": ["level", "description", "employee_id", "urgency_id"],
      "properties": {
        "level": {
          "type": "string",
          "enum": ["info", "warning", "error", "critical"]
        },
        "description": {
          "type": "string"
        },
        "employee_id": {
          "type": "integer",
          "format": "int64"
        },
        "urgency_id": {
          "type": "integer",
          "format": "int64"
        }
      }
    },
    "ActivityListRequest": {
      "type": "object",
      "properties": {
        "level": {
          "type": "string",
          "enum": ["info", "warning", "error", "critical"]
        },
        "employee_id": {
          "type": "integer",
          "format": "int64"
        },
        "urgency_id": {
          "type": "integer",
          "format": "int64"
        },
        "start_date": {
          "type": "string",
          "format": "date-time"
        },
        "end_date": {
          "type": "string",
          "format": "date-time"
        },
        "page": {
          "type": "integer"
        },
        "page_size": {
          "type": "integer"
        }
      }
    },
    "ActivityListResponse": {
      "type": "object",
      "properties": {
        "activities": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ActivityResponse"
          }
        },
        "total": {
          "type": "integer",
          "format": "int64"
        },
        "page": {
          "type": "integer"
        },
        "pageSize": {
          "type": "integer"
        },
        "totalPages": {
          "type": "integer"
        }
      }
    },
    "ActivityStatsResponse": {
      "type": "object",
      "properties": {
        "total_activities": {
          "type": "integer",
          "format": "int64"
        },
        "activities_by_level": {
          "type": "object",
          "additionalProperties": {
            "type": "integer",
            "format": "int64"
          }
        },
        "recent_activities": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ActivityResponse"
          }
        },
        "activities_last_24h": {
          "type": "integer",
          "format": "int64"
        },
        "activities_last_7_days": {
          "type": "integer",
          "format": "int64"
        },
        "activities_last_30_days": {
          "type": "integer",
          "format": "int64"
        }
      }
    }
  }
}
