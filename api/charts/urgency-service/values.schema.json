{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": {"type": "boolean"},
        "className": {"type": "string"},
        "host": {"type": "string"},
        "annotations": {"type": "object"},
        "paths": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "path": {"type": "string"},
              "pathType": {"type": "string"}
            },
            "required": ["path"]
          }
        }
      }
    },
    "strategy": {
      "type": "object",
      "properties": {
        "type": {"type": "string"},
        "rollingUpdate": {
          "type": "object",
          "properties": {
            "maxSurge": {"type": ["string", "integer"]},
            "maxUnavailable": {"type": ["string", "integer"]}
          }
        }
      }
    },
    "secrets": {
      "type": "object",
      "properties": {
        "dbCommon": {"type": "string"},
        "dbService": {"type": "string"},
        "cloudSQLSA": {"type": "string"},
        "cloudSQLSAKey": {"type": "string"},
        "instances": {"type": "string"},
        "cloudSQLPrimarySecret": {"type": "string"},
        "cloudSQLPrimaryKey": {"type": "string"},
        "cloudSQLReplica1Secret": {"type": "string"},
        "cloudSQLReplica1Key": {"type": "string"},
        "cloudSQLReplica2Secret": {"type": "string"},
        "cloudSQLReplica2Key": {"type": "string"}
      }
    },
    "cloudSQL": {
      "type": "object",
      "properties": {
        "useAggregatedSecret": {"type": "boolean"},
        "primaryKey": {"type": "string"},
        "replica1Key": {"type": "string"},
        "replica2Key": {"type": "string"}
      }
    }
  }
}

