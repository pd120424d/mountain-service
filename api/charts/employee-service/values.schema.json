{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "secrets": {
      "type": "object",
      "properties": {
        "dbCommon": {"type": "string"},
        "dbService": {"type": "string"},
        "cloudSQLSA": {"type": "string"},
        "cloudSQLSAKey": {"type": "string"},
        "instances": {"type": "string"},
        "cloudSQLPrimarySecret": {"type": "string"},
        "cloudSQLPrimaryKey": {"type": "string"},
        "cloudSQLReplica1Secret": {"type": "string"},
        "cloudSQLReplica1Key": {"type": "string"},
        "cloudSQLReplica2Secret": {"type": "string"},
        "cloudSQLReplica2Key": {"type": "string"}
      },
      "allOf": [
        {"if": {"properties": {"useAggregatedSecret": {"const": true}}}, "then": {"required": ["dbCommon", "dbService", "cloudSQLSA", "cloudSQLSAKey", "instances"]}},
        {"if": {"properties": {"useAggregatedSecret": {"const": false}}}, "then": {"required": ["dbCommon", "dbService", "cloudSQLSA", "cloudSQLSAKey", "cloudSQLPrimarySecret", "cloudSQLPrimaryKey", "cloudSQLReplica1Secret", "cloudSQLReplica1Key", "cloudSQLReplica2Secret", "cloudSQLReplica2Key"]}}
      ]
    },
    "cloudSQL": {
      "type": "object",
      "properties": {
        "image": {"type": "string"},
        "primaryKey": {"type": "string"},
        "replica1Key": {"type": "string"},
        "replica2Key": {"type": "string"}
      },
      "required": ["image", "primaryKey", "replica1Key", "replica2Key"]
    },
    "pgbouncer": {
      "type": "object",
      "properties": {
        "image": {"type": "string"}
      },
      "required": ["image"]
    }
  },
  "required": ["secrets", "cloudSQL", "pgbouncer"]
}

